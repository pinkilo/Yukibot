{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "sourceMap": false,
    "lib": ["ES5", "ES6"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["./dist", "./node_modules", "src/__tests__"]
}
