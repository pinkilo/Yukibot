{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "declarationDir": "./dist",
    "incremental": true,
    "declaration": true,
    "sourceMap": false,
    "lib": [
      "ES5",
      "ES6"
    ],
    "target": "ES6",
    "module": "commonJS",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "src/__tests__"
  ]
}
