<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <title>{{ botname }} UI</title>
    <style>
        html,
        body {
            background-color: #000;
            color: white;
            overflow: hidden;
        }

        body {
            padding: 2%;
        }

        a {
            color: #fff;
            text-decoration: none;
        }

        h1 {
            color: green;
            text-transform: uppercase;
            font-family: sans-serif;
            text-align: center;
            font-size: 5rem;
            word-break: break-all;
            margin: 0;
        }

        p {
            font-family: monospace;
            font-size: 1rem;
            text-align: center;
        }

        header {
            display: grid;
            grid-template: 2fr 1fr 1fr / 1fr;
            align-items: center;
        }

        header h1 {
            grid-column: 1;
        }

        header p {
            grid-row: 2;
        }

        header .features {
            grid-row: 3;
        }

        .features {
            margin: 0 auto;
            text-align: center;
            padding: 20px 0;
        }

        .features > a {
            padding: 0.5rem 1rem;
            margin: 5px;
            border-radius: 5px;
            font-family: sans-serif;
            text-transform: lowercase;
            background-color: green;
            color: white;
        }

        .features > a:hover {
            background-color: rgba(0, 128, 0, 0.527);
        }

        /* width */
        ::-webkit-scrollbar {
            width: 10px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: rgba(241, 241, 241, 0);
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #797979;
        }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

    </style>
  </head>
  <body>
    {% block content %}
    {% endblock %}
  </body>
</html>
